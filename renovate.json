{
  "extends": [
    "config:base"
  ],
  "labels": ["r:{{depName}}", "r:{{depName}}/{{newVersion}}"],
  "regexManagers": [
    {
      "fileMatch": ["^import_map.json$"],
      "matchStrings": [
        "\"([a-zA-Z0-9_]+)\":\\s*\"https://deno.land/x/(?<depName>.*?)@(?<currentValue>.*?)\""
      ],
      "currentValueTemplate": "{{currentValue}}",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "rangeStrategy": "auto"
    },
    {
      "matchManagers": ["regex"],
      "groupName": "deno dependencies",
      "groupSlug": "deno",
      "labels": ["dependencies", "deno"]
    }
  ]
}
