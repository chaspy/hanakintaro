{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^import_map.json$"],
      "matchStrings": [
        "\"([a-zA-Z0-9_]+)\":\\s*\"https://deno.land/x/(?<depName>.*?)@(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "deno.land/x/{{depName}}",
      "lookupNameTemplate": "deno.land/x/{{lookupName}}",
      "currentValueTemplate": "{{currentValue}}",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "rangeStrategy": "auto"
    },
    {
      "matchManagers": ["regex"],
      "groupName": "deno dependencies",
      "groupSlug": "deno",
      "labels": ["dependencies", "deno"]
    }
  ]
}
